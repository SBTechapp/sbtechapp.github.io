  <script>
    async function translateText() {
      const inputText = document.getElementById("inputText").value;
      const targetLanguage = document.getElementById("targetLanguage").value;
      const translatedText = await translateTextToLanguage(inputText, targetLanguage);
      document.getElementById("outputText").value = translatedText;
    }

    async function translateTextToLanguage(text, targetLanguage) {
      const response = await fetch(`https://api.mymemory.translated.net/get?q=${encodeURIComponent(text)}&langpair=en|${targetLanguage}`);
      const data = await response.json();
      const translation = data.matches[0].translation;
      return translation;
    }
  </script>
